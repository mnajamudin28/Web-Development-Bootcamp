<%- include('header'); -%>
  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">

   <% newListItems.forEach(function(item){ %> <!-- setipa item memiliki _id tambahkan value unteuk memanggil id -->
    <form action="/delete" method="post">
      <div class="item">
        <input type="checkbox" name="checkbox" value="<%= item._id %>" onChange="this.form.submit()"> 
        <p><%= item.name %></p> <!-- diambil dari app.js -->
      </div>
      <input type="hidden" name="listName" value="<%= listTitle %>"></input>
    </form>
   <% }) %>


      <!-- <% for(var i=0; i<newListItems.length; i ++){ %>
        
      <% } %> -->

      <form class="item" action="/" method="post"> <!--  action dan method di isi untuk link ke js -->
        <input type="text" name="newItem" placeholder="New item" autocomplete="off">
        <button type="submit" name="list" value=<%= listTitle %>>+</button>
      </form>
  </div>
<%- include('footer'); -%>
